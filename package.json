{
  "name": "assistant",
  "version": "0.1.0",
  "description": "A helpful AI assistant for managing your tasks, projects, and calendar.",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev -- --no-sandbox",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win",
    "test": "vitest"
  },
  "keywords": [
    "journal",
    "cli",
    "ai",
    "reflection",
    "typescript",
    "task-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@google/generative-ai": "^0.15.0",
    "@prisma/client": "^6.12.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.6.2",
    "express": "^4.19.2",
    "googleapis": "^128.0.0",
    "inquirer": "^8.2.4",
    "js-yaml": "^4.1.0",
    "moment": "^2.30.1",
    "open": "^10.2.0",
    "pg": "^8.10.0",
    "pg-query-stream": "^4.10.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "uuid": "^11.1.0",
    "vue": "^3.4.31"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^8.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.17.32",
    "@types/open": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/test-utils": "^2.4.6",
    "electron": "^31.2.1",
    "electron-builder": "^25.0.3",
    "electron-vite": "^2.3.0",
    "jsdom": "^26.1.0",
    "marked": "^16.1.1",
    "prisma": "^6.12.0",
    "vite": "^5.3.3",
    "vite-plugin-externalize-deps": "^0.9.0",
    "vite-plugin-static-copy": "^3.1.1",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.26"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "nodesman",
        "repo": "assistant"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**",
      "config/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@prisma",
        "to": "node_modules/@prisma",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "prisma",
        "to": "prisma",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to transcribe voice commands for creating and editing tasks and events."
      }
    },
    "win": {
      "target": "nsis"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
